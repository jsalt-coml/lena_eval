journal = {Behavior Research Methods},
keywords = {Adult word count,Agreement,Automatic speech recognition,Bias,Child vocalization count,Conversational turn count,Dutch,Electronic media,Human transcription,Measurement error,Method comparison,Reliability},
number = {5},
pages = {1921--1932},
publisher = {Behavior Research Methods},
