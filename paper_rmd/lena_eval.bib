journal = {Pediatrics},
keywords = {environment,infant,language,lena,neonatology,premature infant,very low birth weight,vocalizations},
number = {5},
pages = {910--916},
title = {{Importance of parent talk on the development of preterm infant vocalizations}},
volume = {128},
year = {2011}
}
